" Disable vi compatibility
set nocompatible

set number

set cursorline

set scrolloff=999

set wildmenu

set wildmode=list:longest

syntax on

set autoindent

" Show file stats
set ruler

" Blink cursor on error instead of beeping
set visualbell

" Whitespace
set wrap
set textwidth=79
set formatoptions=tcqrn1
set tabstop=2
set shiftwidth=2
set softtabstop=2
set expandtab
set noshiftround
